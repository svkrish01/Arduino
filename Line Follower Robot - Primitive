//Line Follower Robot - Primitive

const int EN_A = 10;
const int IN_1 = 9;
const int IN_2 = 8;
const int IN_3 = 7;
const int IN_4 = 6;
const int EN_B = 5;

const int Time_Delay = 500;

void Right_Bend()
{
  analogWrite(EN_A, 127);
  digitalWrite(IN_1, HIGH);
  digitalWrite(IN_2, LOW);

  digitalWrite(EN_B, HIGH);
  digitalWrite(IN_3, LOW);
  digitalWrite(IN_4, HIGH);
}

void Forward()
{
  digitalWrite(EN_A, HIGH);
  digitalWrite(IN_1, HIGH);
  digitalWrite(IN_2, LOW);

  digitalWrite(EN_B, HIGH);
  digitalWrite(IN_3, LOW);
  digitalWrite(IN_4, HIGH);
}

void Left_Bend()
{
  digitalWrite(EN_A, HIGH);
  digitalWrite(IN_1, HIGH);
  digitalWrite(IN_2, LOW);

  analogWrite(EN_B, 127);
  digitalWrite(IN_3, LOW);
  digitalWrite(IN_4, HIGH);
}


void setup() 
{
  pinMode(EN_A, OUTPUT);
  pinMode(IN_1, OUTPUT);
  pinMode(IN_2, OUTPUT);
  pinMode(IN_3, OUTPUT);
  pinMode(IN_4, OUTPUT);
  pinMode(EN_B, OUTPUT);

  Serial.begin(9600);
}

void loop() 
{
  Forward();

  delay(Time_Delay);

  Right_Bend();

  delay(Time_Delay);

  Left_Bend();

  delay(Time_Delay);
}


/*
L293N Motor Driver Connections -

VCC Pin       - 9V
Ground Pin    - Ground
5V Pin        - Vin Pin

Enable Pin A  - Digital Pin 10
Input Pin 1   - Digital Pin 9
Input Pin 2   - Digital Pin 8

Enable Pin B  - Digital Pin 5
Input Pin 3   - Digital Pin 6
Input Pin 4   - Digital Pin 7

Output Pin 1  - Right BO Motor
Output Pin 2  - Right BO Motor

Output Pin 3  - Left BO Motor
Output Pin 4  - Left BO Motor
*/
