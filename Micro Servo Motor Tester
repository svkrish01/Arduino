//Micro Servo Motor Tester

#include <Servo.h>

const int Servo_Pin = 9;

const int Time_Delay = 2000;

Servo My_Servo;

void setup()
{
  MyServo.attach(Servo_Pin);
}

void loop()
{
  My_Servo.write(0);
  delay(Time_Delay);

  My_Servo.write(180);
  delay(Time_Delay);
}


/*
Micro Servo Motor Connections -
VCC Pin     - 5V
GND Pin     - Ground
Control Pin - Digital Pin 9
*/
