//L293N Motor Driver Tester

const int EN_A = 10;
const int IN_1 = 9;
const int IN_2 = 8;
const int IN_3 = 7;
const int IN_4 = 6;
const int EN_B = 5;

const int Time_Delay = 500;

void Right_Wheel_Forward()
{
  digitalWrite(EN_A, HIGH);
  digitalWrite(IN_1, HIGH);
  digitalWrite(IN_2, LOW);
}

void Right_Wheel_Backward()
{
  digitalWrite(EN_A, HIGH);
  digitalWrite(IN_1, LOW);
  digitalWrite(IN_2, HIGH);
}

void Right_Wheel_Stop()
{
  digitalWrite(EN_A, LOW);
  digitalWrite(IN_1, LOW);
  digitalWrite(IN_2, LOW);
}

void Left_Wheel_Forward()
{
  digitalWrite(EN_B, HIGH);
  digitalWrite(IN_3, LOW);
  digitalWrite(IN_4, HIGH);
}

void Left_Wheel_Backward()
{
  digitalWrite(EN_B, HIGH);
  digitalWrite(IN_3, HIGH);
  digitalWrite(IN_4, LOW);
}

void Left_Wheel_Stop()
{
  digitalWrite(EN_B, LOW);
  digitalWrite(IN_3, LOW);
  digitalWrite(IN_4, LOW);
}


void setup() 
{
  pinMode(EN_A, OUTPUT);
  pinMode(IN_1, OUTPUT);
  pinMode(IN_2, OUTPUT);
  pinMode(IN_3, OUTPUT);
  pinMode(IN_4, OUTPUT);
  pinMode(EN_B, OUTPUT);

  Serial.begin(9600);
}

void loop() 
{
  Left_Wheel_Forward();
  Right_Wheel_Forward();

  delay(Time_Delay);

  Left_Wheel_Stop();
  Right_Wheel_Stop();

  delay(Time_Delay);

  Left_Wheel_Backward();
  Right_Wheel_Backward();

  delay(Time_Delay);
}


/*
L293N Motor Driver Connections -

VCC Pin       - 9V
Ground Pin    - Ground
5V Pin        - Vin Pin

Enable Pin A  - Digital Pin 10
Input Pin 1   - Digital Pin 9
Input Pin 2   - Digital Pin 8

Enable Pin B  - Digital Pin 5
Input Pin 3   - Digital Pin 6
Input Pin 4   - Digital Pin 7

Output Pin 1  - Right BO Motor
Output Pin 2  - Right BO Motor

Output Pin 3  - Left BO Motor
Output Pin 4  - Left BO Motor
*/
