//LCD Module Autoscroll Example

#include <LiquidCrystal.h>

const int RS = 12, EN = 11, D4 = 2, D5 = 3, D6 = 4, D7 = 5;

const int Time_Delay = 1500;

int X;

LiquidCrystal My_LCD(RS, EN, D4, D5, D6, D7);

void setup() 
{
  My_LCD.begin(16, 2);

  My_LCD.print("Autoscroll");
  My_LCD.setCursor(0, 1);
  My_LCD.print("Example....");

  delay(Time_Delay);

  My_LCD.clear();
}

void loop() 
{
  My_LCD.setCursor(0, 0);

  for(X = 0; X < 10; X++)
  {
    My_LCD.print(X);

    delay(500);
  }

  My_LCD.autoscroll();
  My_LCD.setCursor(16, 1);

  for(X = 0; X < 10; X++)
  {
    My_LCD.print(X);

    delay(500);
  }

  My_LCD.noAutoscroll();
  My_LCD.clear();
}


/*
LCD Module Connections -
VDD     - 5V
VSS     - Ground
V0      - 10kÎ© Trim-Potentiometer Wiper between 5V and Ground
RS      - Digital Pin 12
RW      - 5V
E       - Digital Pin 11
D4 Pin  - Digital Pin 2
D5 Pin  - Digital Pin 3
D6 Pin  - Digital Pin 4
D7 Pin  - Digital Pin 5
A       - 5V
K       - Ground
*/
