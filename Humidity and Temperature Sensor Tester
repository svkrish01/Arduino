//Humidity and Temperature Sensor Tester

#include <DHT.h>

const int DHT11_Sensor_Pin = 9;

const int Time_Delay = 2000;

float Humidity, Temperature;

DHT My_DHT11(DHT11_Sensor_Pin, DHT11);

void setup()
{
  My_DHT11.begin();
  Serial.begin(9600);
}

void loop()
{
  Serial.println();

  Humidity = My_DHT11.readHumidity();
  Temperature = My_DHT11.readTemperature();

  Serial.print("Humidity (%)    : ");
  Serial.println(Humidity);

  Serial.print("Temperature (C) : ");
  Serial.println(Temperature);

  delay(Time_Delay);
}


/*
Connections -
DHT11 VCC Pin     - 5V
DHT11 Ground Pin  - Ground
DHT11 Data Pin    - Digital Pin 9
Pull Up Resistor  - 10kÎ© Resistor between DHT11 VCC Pin and DHT11 Data Pin
*/
